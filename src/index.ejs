<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>National Dong Hwa University - Announcements</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                fontFamily: {
                    sans: '"Noto Sans TC", Arial, sans-serif',
                },
                container: {
                    padding: "1rem",
                    center: true,
                    screens: {
                        xl: "1024px",
                    },
                },
                extend: {
                    opacity: {
                        15: "0.15",
                    },
                },
            },
        };
    </script>
</head>
<body>
    <div class="container my-6">
        <h1 class="text-4xl font-medium mb-4">國立東華大學公告</h1>
        <div id="category">
            <% categories.forEach(category => { %>
                <a href="#<%= category.category %>" class="mr-4 text-sky-500 hover:text-sky-600"><%= category.name %></a>
            <% }); %>
        </div>
        <div class="my-6">
            <input
                type="text"
                id="search"
                class="border-2 border-slate-300 rounded-md p-2 w-full"
                placeholder="搜尋公告"
            />
        </div>
        <hr class="my-6" />
        <div id="all">
            <% allAnnouncements.forEach(({ category, announcements }) => { %>
                <div class="mb-6">
                    <a id="<%= category.category %>"></a>
                    <h2 class="text-2xl font-medium mb-4"><%= category.name %></h2>
                    <% announcements.forEach(announcement => { %>
                        <a href="<%= announcement.timestamp %>.html" target="_blank">
                            <div class="border-2 border-slate-300 hover:border-slate-400 rounded-md my-4 p-3">
                                <h2 class="mb-1">
                                    <span class="bg-sky-500/75 text-white py-[2px] px-[8px] mr-2 rounded-lg">#<%= announcement.department %></span><%= announcement.title %>
                                </h2>
                                <div class="text-slate-500 flex flex-wrap items-center gap-2 sm:gap-1">
                                    <div class="flex items-center gap-1">
                                        <span id="date" class="whitespace-nowrap">
                                            <%= countDays(announcement.date) %>
                                        </span>
                                    </div>
                                    <% if (announcement.attachmentCount > 0) { %>
                                        <span class="text-slate-500 hidden sm:inline">·</span><span class="hasAttachment">📎</span>
                                    <% } %>
                                </div>
                            </div>
                        </a>
                    <% }); %>
                </div>
            <% }); %>
        </div>
    </div>
    <div class="container footer text-center text-slate-500">
        <p class="mb-2">
            更多公告請至
            <a
                href="https://announce.ndhu.edu.tw/"
                target="_blank"
                class="text-sky-500 hover:text-sky-600"
            >國立東華大學公告</a>
        </p>
    </div>

    <a
        href="#"
        class="fixed bottom-4 right-4 bg-sky-500 text-white p-3 rounded-full shadow-lg hover:bg-sky-600 hover:text-white transition-all duration-300"
        id="top"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 transform rotate-0"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 10l7-7m0 0l7 7m-7-7v18"
            />
        </svg>
    </a>

    <script>
        document.getElementById("top").onclick = () => {
            window.scrollTo({
                top: 0,
                behavior: "smooth",
            });
        };

        document.getElementById("search").oninput = () => {
            let keyword = document.getElementById("search").value.toLowerCase();
            let announcements = document.querySelectorAll('#all a');
            announcements.forEach(announcement => {
                let title = announcement.querySelector('h2').textContent.toLowerCase();
                if (title.includes(keyword)) {
                    announcement.style.display = "block";
                } else {
                    announcement.style.display = "none";
                }
            });
        };
    </script>
</body>
</html>