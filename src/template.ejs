<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>
  <meta property="og:title" content="<%= title %>" />
  <meta property="og:description" content="國立東華大學 <%= (date && date.split(' ')[0]) || '' %>「<%= category || '' %>」公告。
  =============
  <%- getOgDescription(content || '') %>
  " />
  <meta property="og:image" content="https://news.ndhu.me<%= ogImage %>" />
  <meta property="og:image" content="https://news.ndhu.me<%= ogImage %>" />
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:image" content="https://news.ndhu.me<%= ogImage %>">
  <meta property="telegram_channel" content="turbolabit">
  <meta property="og:url" content="https://news.ndhu.me/<%= timestamp %>" />

  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        fontFamily: {
          sans: '"Noto Sans TC", Arial, sans-serif',
        },
        container: {
          padding: "1rem",
          center: true,
          screens: {
            xl: "576px",
          },
        },
        extend: {
          backgroundImage: {},
          opacity: {
            15: "0.15",
          },
        },
      },
    };
  </script>
  <style type="text/tailwindcss">
    @layer utilities {
      .content-auto {
        content-visibility: auto;
      }
    }
    @keyframes slideDown {
      from { transform: translateY(-50px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    .animate-slide-down {
      animation: slideDown 0.3s ease-out;
    }
    </style>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>
  <div class="container my-6">
    <h1 class="text-2xl font-medium mb-4">國立東華大學公告</h1>

    <div class="border-2 border-slate-400 rounded-md my-4 p-3">
      <div class="mb-4">
        <div class="flex items-start justify-between gap-2">
          <h2 class="text-xl font-semibold break-words flex-grow">
            <%= title %>
          </h2>
          <div class="flex items-center gap-1 flex-shrink-0">
            <button class="p-1 text-slate-500 hover:text-sky-500 focus:outline-none rounded-full"
              onclick="navigator.clipboard.writeText(window.location.href).then(()=>{
                const linkIcon = document.getElementById('copy-link').querySelector('span');
                linkIcon.textContent = 'check';
                linkIcon.classList.add('text-green-500');
                setTimeout(() => {
                  linkIcon.textContent = 'link'
                  linkIcon.classList.remove('text-green-500');
                }, 2300);
              })" title="複製連結" id="copy-link">
              <span class="material-symbols-outlined">link</span>
            </button>
            <button class="p-1 text-slate-500 hover:text-sky-500 rounded-full"
              onclick="window.open(`https://announce.ndhu.edu.tw/mail_display.php?timestamp=<%= timestamp %>`)"
              title="在新視窗中開啟">
              <span class="material-symbols-outlined">open_in_new</span>
            </button>
          </div>
        </div>
      </div>
      <div class="text-slate-500 flex flex-wrap items-center gap-2 sm:gap-1">
        <div class="flex items-center gap-1">
          <span id="date" class="whitespace-nowrap">
            <%= date %>
          </span>
          <span class="text-slate-500 hidden sm:inline">·</span>
        </div>

        <div class="flex items-center gap-1">
          <span id="category" class="whitespace-nowrap">
            <%= category %>
          </span>
          <span class="text-slate-500 hidden sm:inline">·</span>
        </div>

        <div id="contactInfo" class="flex items-center gap-1 hover:text-sky-500 cursor-pointer">
          <span id="department" class="whitespace-nowrap">
            <%= department %>
          </span>
          <span class="material-symbols-outlined text-[larger]">
            info
          </span>
        </div>
      </div>

      <hr class="my-2" />
      <div>
        <div id="article" class="overflow-x-auto">
          <%- content.split('<hr class="clear-contentunit"/>')[1].split(`<hr/>`)[0].split(`</div>`)[0] %>
        </div>

        <hr class="my-2" />
        <h3 class="text-xl font-medium mb-2">附件與相關連結</h3>
        <div id="attachments">
          <% if (attachments && attachments.length> 0) { %>
            <ul class="list-disc list-inside">
              <% attachments.forEach(function(attachment) { %>
                <li class="mb-2">
                  <% if (attachment.filePath.startsWith('http')) { %>
                      <a href="<%= attachment.filePath %>" target="_blank" class="text-blue-500 hover:underline inline-flex items-center gap-1">
                        <%= attachment.fileName %>
                        <span class="material-symbols-outlined text-[larger]">
                          open_in_new
                        </span>
                      </a>
                    <% } else { %>
                      <a href="https://announce.ndhu.edu.tw/<%= attachment.filePath %>" target="_blank"
                        class="text-blue-500 hover:underline">
                        <%= attachment.fileName %> <%= attachment.fileSize %>
                      </a>
                      <% } %>
                </li>
                <% }); %>
            </ul>
          <% } else { %>
            <p>無附件</p>
          <% } %>
        </div>
      </div>
    </div>
    <div class="mt-4">
      <a href="/" class="text-slate-500 hover:text-sky-500 cursor-pointer flex items-center gap-1">
        <span class="material-symbols-outlined text-[larger]">
          arrow_back
        </span>
        返回公告列表
      </a>
    </div>
  </div>

  <!-- Modal -->
  <div id="infoModal"
    class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden opacity-0 transition-opacity duration-300">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white animate-slide-down">
      <div class="mt-3">
        <div class="mt-2 px-7 py-3">
          <h3 class="text-lg text-gray-500">
            <span id="modalAuthor"></span>
          </h3>
          <p class="text-gray-500 mt-1">
            <span id="modalDepartment"></span>
          </p>
        </div>

        <!-- article post time -->
        <div class="mt-2 px-7 py-3">
          <p class="text-gray-500">
            <span id="modalDate"></span>
          </p>
        </div>

        <!-- contact -->
        <div class="mt-2 px-7 py-3">
          <p class="text-gray-500">
            <span id="modalEmail" />
          </p>
          <p class="text-gray-500">
            <span id="modalPhone" />
          </p>
        </div>

        <div class="items-center px-4 py-3">
          <button id="closeModal"
            class="px-4 py-2 text-slate-500 text-base font-medium rounded-md w-full shadow-sm hover:bg-slate-200 hover:text-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition duration-300 ease-in-out">
            關閉
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Get modal elements
    const modal = document.getElementById('infoModal');
    const closeButton = document.getElementById('closeModal');
    const infoButton = document.getElementById('contactInfo');
    const modalAuthor = document.getElementById('modalAuthor');
    const modalDepartment = document.getElementById('modalDepartment');

    // Show modal with animation
    infoButton.onclick = function () {
      modal.classList.remove('hidden');
      setTimeout(() => {
        modal.classList.remove('opacity-0');
      }, 10);
      modalAuthor.textContent = '<%= author.name %>';
      modalDepartment.textContent = '<%= author.department %>';
      modalDate.textContent = '<%= date %>';
      document.getElementById('modalEmail').innerHTML = `<a href="mailto:<%= author.email %>" class="text-sky-500 hover:text-sky-700 cursor-pointer flex items-center gap-1">
          <span class="material-symbols-outlined text-[larger]">
            email
          </span>
          <%= author.email %>
        </a>
          `;

      length = '<%= author.phone %>'.length;
      if (length > 4) {
        modalPhone.innerHTML = `<a href="tel:<%= author.phone %>" class="text-sky-500 hover:text-sky-700 cursor-pointer flex items-center gap-1">
          <span class="material-symbols-outlined text-[larger]">
            phone
          </span>
          <%= author.phone %>
        </a>`;
      } else {
        modalPhone.innerHTML = `<a href="tel:03890<%= author.phone %>" class="text-sky-500 hover:text-sky-700 cursor-pointer flex items-center gap-1">
          <span class="material-symbols-outlined text-[larger]">
            phone
          </span>
          <%= author.phone %>（校內分機）
        </a>`;
      }
    }
    // Close modal with animation
    function closeModal() {
      modal.classList.add('opacity-0');
      setTimeout(() => {
        modal.classList.add('hidden');
      }, 300); // Wait for the fade-out animation to complete
    }

    closeButton.onclick = closeModal;

    // Close modal when clicking outside
    window.onclick = function (event) {
      if (event.target == modal) {
        closeModal();
      }
    }
  </script>

  <script type="text/javascript">
    let article = document.getElementById("article");

    function countDays(date) {
      let now = new Date();
      let target = new Date(date);
      let diff = now.getTime() - target.getTime();
      let days = Math.floor(diff / (1000 * 60 * 60 * 24));

      if (days <= 0) {
        // return n minutes ago
        let minutes = Math.floor(diff / (1000 * 60));
        if (minutes <= 5) {
          return "剛剛";
        } else if (minutes <= 60) {
          return `${minutes} 分鐘前`;
        } else {
          return `${Math.floor(minutes / 60)} 小時前`;
        }
      } else if (days == 1) {
        return "昨天";
      } else if (days == 2) {
        return "前天";
      } else {
        return `${days} 天前`;
      }
    };

    const content = document.getElementById("article").innerHTML;

    window.onload = () => {
      // format publish time
      const date = document.getElementById("date");
      date.innerHTML = countDays(date.innerHTML);
    };
  </script>
</body>

</html>